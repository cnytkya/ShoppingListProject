@model List<ShoppingListProject.EntityLayer.Product>


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<main id="main">
    <section id="breadcrumbs" class="breadcrumbs">
        <!-- ... -->
    </section>

    <main id="main">
        @foreach (var item in Model)
        {

            <!-- ======= Breadcrumbs ======= -->
            <section id="breadcrumbs" class="breadcrumbs">
                <div class="container">

                    <div class="d-flex justify-content-between align-items-center">
                        <h2>@item.Name</h2>
                        <ol>
                            <li><a href="/Products/Index">Ürün Listesine Dön</a></li>

                        </ol>
                    </div>

                </div>
            </section>

            <!-- End Breadcrumbs -->
            <!-- ======= Portfolio Details Section ======= -->
            <section id="portfolio-details" class="portfolio-details">
                <div class="container">

                    <div class="row gy-4">

                        <div class="col-lg-8">
                            <div class="portfolio-details-slider swiper">
                                <div class="swiper-wrapper align-items-center">

                                    <div class="swiper-slide">
                                        <img src="@item.Image" alt="">
                                    </div> 
                                    
                                    @*<div class="swiper-slide">
                                        <img src="@item.Image2" alt="">
                                    </div>
                                    
                                    <div class="swiper-slide">
                                        <img src="@item.Image3" alt="">
                                    </div>*@

                                </div>
                                <div class="swiper-pagination"></div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="portfolio-info">
                                <h3>Ürün Detayları</h3>
                                <ul>
                                    @if (item.Category != null)
                                    {
                                        <li><strong>Kategori</strong>: @item.Category.Name</li>
                                    }
                                    else
                                    {
                                        <li><strong>Kategori</strong>: @item.CategoryId</li>
                                    }

                                    <li><strong>Ürün İsmi</strong>: @item.Name</li>
                                    <li><strong>Ürün Kodu</strong>: @item.ProductCode</li>
                                    <li><strong>Ürün Oluşturulma Tarihi</strong>: @item.CreateDate</li>
                                </ul>
                            </div>
                            <div class="portfolio-description">
                                <h2>Ürün Açıklaması</h2>
                                <p>
                                    @item.Details
                                </p>
                            </div>
                        </div>

                    </div>

                </div>
            </section>

            <!-- End Portfolio Details Section -->
        }
    </main><!-- End #main -->
</main>
